{
    "name": "@aykahshi/copilot-mcp-server",
    "version": "2.1.1",
    "description": "GitHub Copilot CLI integration for Model Context Protocol clients",
    "license": "MIT",
    "author": "Aykahshi",
    "homepage": "https://github.com/Aykahshi/copilot-mcp-tool",
    "bugs": "https://github.com/Aykahshi/copilot-mcp-tool/issues",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Aykahshi/copilot-mcp-tool.git"
    },
    "bin": {
        "copilot-mcp-server": "dist/esm/copilot/index.js"
    },
    "main": "./dist/esm/copilot/index.js",
    "engines": {
        "node": ">=22.0.0"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "github-copilot",
        "copilot",
        "ai",
        "code-assistant",
        "claude",
        "vscode",
        "cursor",
        "zed"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "node scripts/prepare-esm.js && tsc -p tsconfig.prod.json",
        "build:cjs": "node scripts/prepare-cjs.js && tsc -p tsconfig.cjs.json",
        "prepack": "npm run build",
        "prepublishOnly": "npm run build",
        "start": "node dist/esm/copilot/index.js",
        "test": "node test-detailed.js",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write ."
    },
    "dependencies": {
        "zod": "^3.23.8",
        "zod-to-json-schema": "^3.24.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/node": "^22.0.2",
        "typescript": "^5.5.4"
    }
}